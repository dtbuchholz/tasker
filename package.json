{
  "name": "tasker",
  "version": "0.1.0",
  "type": "module",
  "description": "Telegram-first personal task management agent",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "mcp": "node dist/mcp/server.js",
    "checkin": "node dist/scripts/checkin.js",
    "checkin:weekly": "node dist/scripts/checkin.js --weekly",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "drizzle-orm": "^0.38.0",
    "pg": "^8.13.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs,json,md}": "prettier --write"
  },
  "engines": {
    "node": ">=20"
  }
}
